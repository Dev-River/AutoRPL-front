    width: 100%;
    height: 100px;
}
.button-wrapper{
    padding-left: 5px;
    padding-right: 5px;
}
.obj_selected{
    margin: 6px 6px 0 6px;
    color: #545454;
    font-size: 90%;
}
.obj_selected image{
    height: 80px;
    width: 80px;
    margin-right: 8px;
}
.obj_selected .objDetail{
    padding: 0 6px 6px 6px;
}
.objDetail view{
    padding-top: 3px;
}
