    border: 2px solid #FF0000;
    border-radius: 5px;
}
.schedule_date{
    background-color: #fff;
    margin: 5px;
    padding: 5px;
}
.towhom{
    background-color: #fff;
    margin: 5px;
    padding: 5px;
}
.keysvalue-group{
    background-color: #fff;
    margin: 5px;
    padding: 5px;
    display: block;
}
.addKeymap{
    display: inline;
    color: #4876FF;
    font-size: 90%;
    float: right;
}
.comment{
    background-color: #fff;
    margin: 5px;
    padding: 5px;
}
.comment textarea{
    height: 120px;
    border: 2px solid #D1D1D1;
    padding: 5px;
    width: 95.5%;
